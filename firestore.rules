rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 다이어리 컬렉션에 대한 규칙
    match /diaries/{document} {
      // 임시로 모든 접근 허용 (개발용)
      allow read, write: if true;
    }
    
    // 다른 컬렉션들은 기본적으로 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}