rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 다이어리 컬렉션에 대한 규칙
    match /diaries/{document} {
      // 특정 이메일만 읽기/쓰기 허용
      allow read, write: if request.auth != null && 
        request.auth.token.email == "leeys2413@gmail.com";
    }
    
    // 다른 컬렉션들은 기본적으로 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
